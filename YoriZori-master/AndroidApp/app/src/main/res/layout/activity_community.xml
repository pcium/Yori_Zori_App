<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Community">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal"
        android:id="@+id/page_top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <ImageButton
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:id="@+id/commu_backBtn"
            android:src = "@drawable/ic_arrow_left"
            android:scaleType="centerInside"
            android:background="#ffffff"
            android:layout_alignBottom="@id/add_recipe"
            android:visibility = "gone"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/page_title"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/commu_backBtn"
            android:layout_alignBaseline="@id/add_recipe"/>
        <ImageButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:gravity="center"
            android:src="@drawable/ic_search_gray_24dp"
            android:background="#ffffff"
            android:layout_marginRight="10dp"
            android:id="@+id/commu_search"
            android:layout_alignBottom="@id/add_recipe"
            android:layout_toLeftOf="@id/add_recipe"
            android:layout_alignParentTop="true"/>
        <ImageButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:gravity="center"
            android:src="@drawable/ic_plus"
            android:background="#ffffff"
            android:scaleType="fitCenter"
            android:id="@+id/add_recipe"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/listview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#FFFFFF"
        android:dividerHeight="10dp"
        android:divider="#ffffff"
        android:layout_below="@id/page_top"
        android:layout_alignParentBottom = "true"/>


</RelativeLayout>